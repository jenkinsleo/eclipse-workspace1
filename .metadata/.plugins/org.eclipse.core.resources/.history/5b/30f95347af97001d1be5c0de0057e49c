
public class IterativeSearcher {

	public int doBinarySearch(IntegerArray arr, int x) {
	    int left = 0;
	    int right = arr.length() - 1;

	    // add sentinel value at the end of the array
	    arr.set(right + 1, x);

	    while (arr.read(left) != x) {
	        int mid = left + (right - left) / 2;
	        if (x < arr.read(mid)) {
	            right = mid - 1;
	        } else {
	            left = mid + 1;
	        }
	    }

	    // check if the found value is not the sentinel value
	    if (left == arr.length() - 1) {
	        return -1;
	    } else {
	        return left;
	    }
	}
	
	

}
